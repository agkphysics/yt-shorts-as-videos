{
  "manifest_version": 3,
  "name": "YouTube Shorts as videos",
  "description": "Watch YouTube Shorts as normal videos.",
  "version": "1.0.3",
  "author": "Aaron Keesing",
  "homepage_url": "https://github.com/agkphysics/yt-shorts-as-videos",
  "icons": {
    "48": "icons/icon_48.png",
    "96": "icons/icon_96.png"
  },
  "permissions": [
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yt-shorts-as-videos@agkphysics.github.io"
    }
  }
}
